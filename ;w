package main

import (
	"bufio"
	"fmt"
	"os"
	"os/exec"
	_ "path/filepath"
	"slices"
	"strings"
)

func main() {
	validCommands := []string{"type", "exit", "echo"}

	isBreak := false

	for {
		fmt.Print("$ ")

		scanner := bufio.NewScanner(os.Stdin)

		scanner.Scan()

		err := scanner.Err()
		if err != nil {
			fmt.Printf("Fatal error: %v\n", err)
		}

		input := scanner.Text()

		params := strings.Split(input, " ")

		command := params[0]

		switch command {
		case "type":
			toolName := params[1]
			if slices.Contains(validCommands, toolName) {
				fmt.Printf("%s is a shell builtin\n", params[1])
			} else {
				absPath, err := exec.LookPath(toolName)
				if err == nil {
					fmt.Printf("%s is %s\n", toolName, absPath)
				} else {
					fmt.Printf("%s: not found", toolName)
				}
			}
		case "exit":
			isBreak = true
		case "echo":
			restOfTheCommand := input[len(params[0])+1:] // the last 1 is for the space!
			fmt.Println(restOfTheCommand)
		default:
			absPath, err := exec.LookPath(command)
			if err == nil {
				otherArgvs := params[1:]

				cmd := exec.Command(absPath, otherArgvs...)

				output, err := cmd.Output()
				if err != nil {
					fmt.Println(err)
				}
				fmt.Printf("%s", output)
			} else {
				fmt.Printf("%s: not found\n", command)
			}

		}

		if isBreak {
			break
		}

	}

}

func debug(input any) {
	fmt.Printf("DEBUGGING: |%#v|\n", input)
}
